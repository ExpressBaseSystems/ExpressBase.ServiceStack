<head>
    <script src="~/js/Pswrd.js"></script>
    <link rel="stylesheet" href="~/css/Pwd.css" />
</head>
<body>

    @using (Html.BeginForm(FormMethod.Post, new { enctype = "application/x-www-form-urlencoded" }))
    {
        <table>
            <tr>
                <td><div class="tdd">Client ID</div></td>
                <td><div class="tdd"><input type="text" id="cid" name="cid" required /></div></td>
                <td><span id="div5"></span></td>
            </tr>
            <tr>
                <td><div class="tdd">Email/UserName</div></td>
                <td><div class="tdd"><input type="text" id="email" name="email" required /></div></td>
            </tr>
            <tr>
                <td><div class="tdd">Password</div></td>
                <td><div class="tdd"><input type="password" id="password" name="password" required /></div></td>
                <td><span id="result"></span></td>
            </tr>
            <tr>
                <td><div class="tdd">Re-Type Password</div></td>
                <td><div class="tdd"><input type="password" id="rpwd" name="rpwd" required" /></div></td>
                <td><span id="rresult"></span></td>
            </tr>
            <tr>
                <td><div class="tdd">First Name</div></td>
                <td><div class="tdd"><input type="text" id="firstname" name="firstname" required /></div></td>
            </tr>
            <tr>
                <td><div class="tdd">Last Name</div></td>
                <td><div class="tdd"><input type="text" id="lastname" name="lastname" required /></div></td>
            </tr>
            <tr>
                <td><div class="tdd">Job Title</div></td>
                <td><div class="tdd"><input type="text" id="jobtitle" name="jobtitle" required /></div></td>
            </tr>
            <tr>
                <td><div class="tdd">Company</div></td>
                <td><div class="tdd"><input type="text" id="company" name="company" required /></div></td>
            </tr>
            <tr>
                <td><div class="tdd">Phone</div></td>
                <td><div class="tdd"><input type="text" id="phone" name="phone" required /></div></td>
            </tr>
            <tr>
                <td><div class="tdd">Employees</div></td>
                <td>
                    <div class="tdd">
                        <select id="employees" name="employees" required>
                            <option value="1-10">1-10</option>
                            <option value="11-50">11-50</option>
                            <option value="51-100">51-100</option>
                            <option value="101-250">101-250</option>
                            <option value="251-500">250-500</option>
                            <option value="greater than 500">greater than 500</option>
                        </select>
                    </div>
                </td>
            </tr>
            <tr>
                <td><div class="tdd">Zip/Postel Code</div></td>
                <td><div class="tdd"><input type="text" id="zipcode" name="zipcode" required /></div></td>
            </tr>
            <tr>
                <td><div class="tdd">Language</div></td>
                <td><div class="tdd"><input type="text" id="language" name="language" required /></div></td>
            </tr>
        </table>
        <input type="submit" value="Sign up" />



        <style>
            .tdd {
                margin: 10px;
            }

            input[type="text"] {
                display: block;
                margin: 0;
                width: 102%;
                font-family: sans-serif;
                font-size: 18px;
                box-shadow: none;
                border-radius: none;
            }

                input[type="text"]:focus {
                    outline: none;
                }

            input[type="password"] {
                display: block;
                margin: 0;
                width: 102%;
                font-family: sans-serif;
                font-size: 18px;
                box-shadow: none;
                border-radius: none;
            }

            input[type="text"]:focus {
                outline: none;
            }

            input[type="submit"] {
                background-color: #4C50AF; /* blue */
                border: none;
                color: white;
                padding: 8px 42px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
            }

                input[type="submit"]:hover {
                    background-color: #337; /* blue */
                }
        </style>
    }
</body>